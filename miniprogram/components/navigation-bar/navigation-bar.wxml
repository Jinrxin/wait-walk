<!-- 顶部导航栏 -->
<view class="bangumi-navigation-bar">
  <view class="bangumi-navigation-bar__inner" style="color: {{color}}; background: {{background}}; {{displayStyle}};{{innerWidth}}; {{innerPaddingRight}}; {{safeAreaTop}}">

    <!-- 左侧按钮 -->
    <view wx:if="{{back}}" class='bangumi-navigation-bar__left' style="{{leftWidth}}">
      <!-- 返回上一页 -->
      <block>
        <view bindtap="back" class="bangumi-navigation-bar__back" hover-class="bangumi-active" hover-stay-time="100" aria-role="button" aria-label="返回">
          <image class="icon-back" src="data:image/svg+xml;charset=utf-8;base64," />
        </view>
      </block>

    </view>

    <!-- 标题 -->
    <view class='bangumi-navigation-bar__center'>
      <block>
        <view class="title" style="{{ back ? '' : ' padding-left: 12px' }}">
          <text>等你走过的路</text>
        </view>
      </block>
    </view>

  </view>
</view>